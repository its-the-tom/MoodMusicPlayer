<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/music_item_layout"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_music"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:id="@+id/ivMusicImage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivMusicImage"
        android:text="Music Name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/btnMore"
        android:layout_marginStart="10dp"
        android:id="@+id/tvMusicTitle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivMusicImage"
        android:layout_below="@id/tvMusicTitle"
        android:text="Artist Name"
        android:layout_marginStart="10dp"
        android:id="@+id/tvMusicArtist"
        android:layout_toStartOf="@id/btnMore"
        android:layout_marginEnd="10dp"
        android:singleLine="true"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_menu_more"
        android:id="@+id/btnMore"
        />



</RelativeLayout>